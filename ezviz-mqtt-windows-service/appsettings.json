{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "polling": {
    "cameras": 5,
    "alarms": 1,
    "alarmStaleAgeMinutes": 10
  },
  "ezviz": {
    "username": "",
    "password": ""
  },
  "mqtt": {
    "host": "",
    "username": "",
    "password": "",
    "connectRetries": 3,
    "connectRetryDelaySeconds": 60,
    "topics": {
      "command": "ezviz/cmnd/{serial}",
      "status": "ezviz/stat/{serial}",
      "alarm": "ezviz/alarm/{serial}",
      "lwt": "ezviz/lwt/{serial}"
    }
  },
  "json": {
    "serializeBooleans": 1,
    "serializeTrueAs": "ON",
    "serializeFalseAs": "OFF"
  }

}
